<%= form_for([@place, @place.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
   <p>
    <%= f.label :reference %><br>
    <%= f.text_area :reference %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>